- if current_user
  .well
    %h1 Meine Vereine
    %table.table.table-striped#own_clubs
      = render current_user.verified_clubs

  %br
  .well
    %h2 unbestaetigte Anmeldungen
    %ul#pending
      - current_user.unverified_clubs.each do |club|
        %li="#{club.name} wartet auf Bestaetigung"


  %br
  .well
    %h1 Alle Vereine
    %ul#all_clubs
      - @clubs.reject{|x| current_user.clubs.include?(x) if current_user.clubs}.each do |club|
        %li
          =link_to "#{club.name} hinzufuegen", add_club_path(club_id: club.id, user_id: current_user.id)

  %br/
  = link_to 'Neuen Verein hinzufuegen', new_club_path, class: "btn btn-primary"
- else
  .well
    %h1 Alle Vereine
    %ul
      -@clubs.map{|x| x.to_s}.each do |club|
        %li=club