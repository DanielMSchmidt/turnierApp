<p id="notice"><%= notice %></p>
<h1>Turniere des <%= @club.name %></h1>
<br>
<h3>Statistiken</h3>
<%= raw(print_stats @users.collect{|x| x.tournaments}.flatten) %>
<h3>Mitglieder</h3>
<br>
<ul>
<% @users.each do |user| %>
  <li><%= link_to "#{user.name}", user_tournaments_path(user) %></li>
<% end %>
</ul>

<br>
<% if current_user == @club.owner %>
  <table class="tournament-list table table-striped">
    <tr>
      <th>Paar</th>
      <th>Datum</th>
      <th>Zeit</th>
      <th>Art</th>
      <th>Platz</th>
      <th>Adresse</th>
      <th>Turniernr.</th>
      <th></th>
      <th></th>
    </tr>

      <%= render @unenrolled_tournaments, enrollable: true %>
  </table>
  <h3>Jemand anders meldet die Paare</h3>
  <ul>
  <% @users.each do |user| %>
    <li><%= link_to "zu #{user.name} wechseln", transfer_ownership_to_path(user_id: user.id, club_id: @club.id), class: "btn" %></li>
  <% end %>
  </ul>

  <br />

  <%= link_to 'Verein umbenennen', edit_club_path(@club) %> |
  <%= link_to 'Verein löschen', @club, :method => :delete, :confirm => "Bist du dir sicher?" %>
<% end %>
<%= link_to 'Zurück', clubs_path %>