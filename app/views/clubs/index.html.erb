<h1>Alle Vereine</h1>
<% if current_user.nil? %>
  <ul>
    <% @clubs.each do |club| %>
      <li><%= club.name %></li>
    <% end %>
  </ul>
<% else %>
  <table class="table table-striped">
  <% @clubs.each do |club| %>
    <tr>
      <td>
        <%= link_to club.name, club %>
        <% if club.is_owner?(current_user) %>
          <%= link_to 'umbenennen', edit_club_path(club) %> |
          <%= link_to 'löschen', club, :method => :delete, :confirm => "Bist du dir sicher?" %>
        <% end %>
      </td>
    </tr>
  <% end %>
  <br />
  <%= link_to 'Verein hinzufügen', new_club_path, class: "btn btn-primary" %>
  </table>
<% end %>