= form_for(@tournament) do |f|
  - if @tournament.errors.any?
    #error_explanation
      %h2
        = pluralize(@tournament.errors.count, "Fehler")
        verhindern, dass dieses Turnier gespeichert wird:
      %ul
        - @tournament.errors.full_messages.each do |msg|
          %li= msg

  .help-block
    Bitte niedrigsten Platz bei geteilten Pl√§tzen nehmen

  .input-prepend
    .add-on
      Platz
    = f.number_field :place

  .input-prepend
    .add-on
      Teilnehmerzahl
    = f.number_field :participants

  .actions
    = f.submit "erstellen", class: "btn btn-primary"

=render "has_clubs_popover"