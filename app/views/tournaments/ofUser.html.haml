- admin ||= false

#tournaments.page
  .row-fluid
    .span12
      %h1
        Alle Turniere von
        = @user.activeCouple.to_s

  %br/
  %table.tournament-list.table.table-striped{:class => "#{'admin' if admin}"}
    %thead
      %tr
        %th Datum
        %th Zeit
        %th Art
        %th Platz
        %th Adresse
        %th Turniernr.
        %th Status
        %th
        %th
        %th
    = render @tournaments, admin: false, withoutCouple: true
