- pdf ||= false
- admin ||= false
- withoutCouple ||= false
- withoutUserControl ||= false

%tr
  - unless withoutCouple
    %td
      = tournament.couple.to_s

  %td
    = tournamentDate(tournament)
  %td
    = tournamentTime(tournament)
  %td
    = tournament.kind
  - unless pdf && tournament.place.nil?
    %td
      - if tournament.incomplete?
        ? von ??
      - else
        = "#{tournament.place } von #{tournament.participants || '??'}"
  - unless admin
    %td
      = tournamentAddress(tournament)
  %td
    = tournament.number

  - unless pdf
    %td#status
      %div{:class => tournament.statusClasses}
    - if admin && !tournament.enrolled?
      %td
        = link_to 'Als gemeldet markieren', just_enrolled_path(tournament.id), class: "btn", onClick: "_gaq.push(['_trackEvent', 'Tournaments', 'Enrolled']);"
    - else
      %td

    - if tournament.belongsToUser(current_user) && !withoutUserControl
      %td
        = link_to 'Ergebnis eintragen', edit_tournament_path(tournament), class: "btn", onClick: "_gaq.push(['_trackEvent', 'Tournaments', 'Enhance']);"
      %td
        = link_to 'LÃ¶schen', tournament, method: :delete, data: { confirm: 'Bist du dir sicher?' }, class: "btn btn-danger", onClick: "_gaq.push(['_trackEvent', 'Tournaments', 'Delete']);"
    - else
      %td
