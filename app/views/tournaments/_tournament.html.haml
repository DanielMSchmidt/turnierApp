- pdf ||= false
- admin ||= false

%tr
  %td
    = tournament.couple.to_s
    %br/
  %td= tournament_date(tournament)
  %td= tournament_time(tournament)
  %td= tournament.kind
  - unless pdf && tournament.place.nil?
    %td
      - if tournament.incomplete?
        ? von ??
      - else
        = "#{tournament.place } von #{tournament.participants || '??'}"
  %td= tournament_adress(tournament)
  %td= tournament.number

  - unless pdf
    %td#status
      %div{:class => tournament.statusClasses}
    - if admin && !tournament.enrolled?
      %td
        = link_to 'Als gemeldet markieren', just_enrolled_path(tournament.id), class: "btn"
    - if tournament.belongsToUser(current_user)
      %td
        = link_to 'Ergebnis eintragen', edit_tournament_path(tournament), class: "btn"
