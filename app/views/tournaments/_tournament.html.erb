<tr>
  <td><%= tournament.number %></td>
  <td><%= tournament.user_id %></td>
  <td><%= tournament.place %> von <%= tournament.participants %></td>
  <td><%= tournament_adress(tournament) %></td>
  <td><%= tournament_time(tournament) %></td>
  <td><%= tournament_date(tournament) %></td>
  <td><%= tournament.kind %></td>
  <% if current_user == @user %>
    <td><%= link_to 'Show', tournament %></td>
    <td><%= link_to 'Edit', edit_tournament_path(tournament) %></td>
    <td><%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</tr>