<tr>
  <td><%= tournament.user.name%></td>
  <td><%= tournament_date(tournament) %></td>
  <td><%= tournament_time(tournament) %></td>
  <td><%= tournament.kind %></td>
  <td><%= tournament.place || '?' %> von <%= tournament.participants || '??' %></td>
  <td><%= tournament_adress(tournament) %></td>
  <td><%= tournament.number %></td>



  <% if current_user.organises(tournament) %>
    <% enrollable ||= 'false' %>

    <td id="status" class="
    <%= 'missing_information ' if tournament.behind_time? %>
    <%= 'not_enrolled ' unless tournament.enrolled? %>"></td>
    <% if enrollable && !tournament.enrolled? %>
      <td><%= link_to 'Sind gemeldet!', just_enrolled_path(tournament.id) %></td>
    <% else %>
      <td></td>
    <% end %>
  <% end %>

  <% if current_user == tournament.user %>
    <td><%= link_to 'Bearbeiten', edit_tournament_path(tournament) %></td>
    <td><%= link_to 'LÃ¶schen', tournament, method: :delete, data: { confirm: 'Bist du dir sicher?' } %></td>
  <% end %>
</tr>