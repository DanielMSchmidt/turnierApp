= form_for(@tournament) do |f|
  - if @tournament.errors.any?
    #error_explanation
      %h2
        = pluralize(@tournament.errors.count, "Fehler")
        verhindern, dass dieses Turnier gespeichert wird:
      %ul
        - @tournament.errors.full_messages.each do |msg|
          %li= msg

  .input-prepend
    .add-on
      Turniernummer
    = f.number_field :number

  .help-block
    Bitte niedrigsten Platz bei geteilten PlÃ¤tzen nehmen

  .input-prepend
    .add-on
      Platz
    = f.number_field :place

  .input-prepend
    .add-on
      Teilnehmerzahl
    = f.number_field :participants

  = f.hidden_field :user_id, :value => current_user.id

  .actions
    = f.submit "erstellen", class: "btn btn-primary"

= render "tournaments/has_clubs_popover"