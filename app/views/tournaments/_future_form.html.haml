= form_for(Tournament.new, :html => {:class => "form-horizontal"}) do |f|
  .control-group
    = f.label :number, "Turniernummer", :class =>"control-label"
    .controls
      = f.number_field :number
      = f.hidden_field :user_id, :value => current_user.id
  .form-actions
    = f.submit "Turnier erstellen", class: "btn btn-primary"

= render "tournaments/has_clubs_popover"
