- active_couple = current_user.activeCouple
#new_pair_modal.modal.hide.fade
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
    %h3 Neues Paar erstellen
  .modal-body
    = form_for active_couple, :url => change_active_couple_path, :html => {:class => 'form-horizontal'} do |f|
      .control-group
        = f.label 'Herr', :class => 'control-label'
        .controls
          = f.text_field :man, data: {provide: 'typeahead', source: getUserNamesAndPlaceholder}, value: setValueTo(active_couple.man), autocomplete: "off"

      .control-group
        = f.label 'Dame', :class => 'control-label'
        .controls
          = f.text_field :woman, data: {provide: 'typeahead', source: getUserNamesAndPlaceholder}, value: setValueTo(active_couple.woman), autocomplete: "off"
      %hr
      .control-group
        = f.label 'Startklasse', :class => 'control-label'
        .controls
          = f.text_field :latin_kind, placeholder: 'Latein', :class => 'input-small', value: active_couple.latin.kind
          = f.text_field :standard_kind, placeholder: 'Standard', :class => 'input-small', value: active_couple.latin.kind
      .actions
        = f.submit 'Jetzt ändern', :class => "btn btn-primary"